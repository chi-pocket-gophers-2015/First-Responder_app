<h1>Service Request</h1>
<table>
  <tr>
    <td>
      Status:
    </td>
    <td>
      <%= @request['Status'] %>
    </td>
  </tr>
  <tr>
    <td>
      Date Created:
    </td>
    <td>
      <%= @request['Creation Date'].to_date.strftime("%m/%d/%Y") %>
    </td>
  </tr>
  <tr>
    <td>
      Service Request ID
    </td>
    <td>
      <%= @request['Service Request Number'] %>
    </td>
  </tr>
  <tr>
    <td>
      Type of Request
    </td>
    <td>
      <%= @request['Type of Service Request'] %>
    </td>
  </tr>
  <tr>
    <td>
      Street Address
    </td>
    <td>
      <%= @request['Street Address'] %>
    </td>
  </tr>
</table>