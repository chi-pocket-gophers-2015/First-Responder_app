<div class="container-header">
  <h1>Most recent requests</h1>
</div>
<div id="request-list">
  <div class="table-responsive" id="no-more-tables">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Type of Service Request</th>
          <th>Street Address</th>
          <th>Creation Date</th>
          <th>Status</th>
  
        </tr>
      </thead>
      <% @requests.each do |request| %>
        <tr>

          <td><%= link_to(request[:type_of_service_request], request_path(request)) %></td>
          <td><%= "#{request[:street_address]}" %></td>
          <!-- Zip is in street address body #, Chicago, IL.  #{request[:zip_code]}" %></td> -->
          <td><%= request[:creation_date].strftime("%m/%d/%Y") %></td>
          <td><%= request[:status] %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <%= will_paginate @requests, class: 'digg_pagination' %>
</div>

