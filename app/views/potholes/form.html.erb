<div id="form-header">
  Submit Pothole Fixing Request
</div>

<% if @errors && @errors.length > 0 %>
  <%= render partial: 'errors', locals: {errors: @errors} %>
<% end %>

<%= form_tag({controller: 'potholes', action: 'update'}, {:multipart => true}) do %>
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <%= label_tag :image %>:
    <%= file_field_tag :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>:
    <%= text_area_tag :description, content = nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :where_located, "Where is the pothole located?" %>:
    <%= select_tag(:where_located, options_for_select(Pothole::POTHOLE_LOCATION_OPTIONS), {class: 'form-control'}) %>
  </div>
    <!-- use different partial for logged in? -->
  <%= render partial: 'form' %>
  <%= submit_tag "Submit", class: "btn btn-default" %>
<% end %>




