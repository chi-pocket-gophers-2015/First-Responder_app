<div id="form-header">
  Report Abandoned Vehicle
</div>

<% if @errors && @errors.length > 0 %>
  <%= render partial: 'errors', locals: {errors: @errors} %>
<% end %>

<div id="submission-form">
  <table>
    <%= form_tag({controller: 'abandoned_vehicles', action: 'update'}, {:multipart => true}) do %>
      <input type="hidden" name="_method" value="put">
      <tr>
        <td><%= label_tag :image %>: </td>
        <td><%= file_field_tag :image %></td>
      </tr>
      <tr>
        <td><%= label_tag :description %>: </td>
        <td><%= text_area_tag :description %></td>
      </tr>
      <tr>
        <td><%= label_tag :vehicle_make_model, "Vehicle make/model" %>: </td>
        <td><%= select_tag(:vehicle_make_model, options_for_select(AbandonedVehicle::VEHICLE_MAKE_MODEL_OPTIONS)) %></td>
      </tr>
      <tr>
        <td><%= label_tag :vehicle_color %>: </td>
        <td><%= select_tag(:vehicle_color, options_for_select(AbandonedVehicle::VEHICLE_COLOR_OPTIONS)) %></td>
      </tr>
      <tr>
        <td><%= label_tag :vehicle_license, "Vehicle license plate number" %>: </td>
        <td><%= text_area_tag :vehicle_license %></td>
      </tr>
      <tr>
        <td><%= label_tag :vehicle_body_style %>: </td>
        <td><%= select_tag(:vehicle_body_style, options_for_select(AbandonedVehicle::VEHICLE_BODY_STYLE_OPTIONS)) %></td>
      </tr>
       <tr>
        <td><%= label_tag :vehicle_days_parked, "How many days has the vehicle been parked?" %>: </td>
        <td><%= text_area_tag :vehicle_days_parked %></td>
      </tr>
    </table>
      <!-- use different partial for logged in? -->
      <!-- format this as optional -->
      <%= render partial: 'form' %>
    <table>
      <tr>
        <td></td>
        <td><%= submit_tag "Submit", class: "form-submit" %></td>
      </tr>
    <% end %>
  </table>
</div>
